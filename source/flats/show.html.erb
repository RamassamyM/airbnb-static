<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[key] %>
<!-- Inject flat data in template -->
<div class="banner-medium" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= '../' + flat.picture %>);   background-position: center;">
</div>

<div class="booking-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="flat-details">
          <div class="flat-owner text-center">
            <%= image_tag flat.owner_picture, class: " avatar-md img-circle" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="flat-infos">
            <h3><%= flat.summary %></h3>
            <p><%= flat.city %></p>
            <div class="stars">
              <% flat.rating.times do %>
                <i class="fa fa-star star-yellow"></i>
              <% end %>
              <% (5-flat.rating).times do %>
                <i class="fa fa-star star-grey"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form class="booking-form wrapper-grey" action="">
          <h4>Book this flat</h4>
          <div class="row">
            <div class="booking-block form-group">
              <div class="col-sm-6">
                <input class="form-control" type="text" placeholder="checkin">
              </div>
              <div class="col-sm-6">
                <input class="form-control" type="text" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <a href="#" class="btn btn-success btn-full-width">Book it</a>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="wrapper-flat-infos wrapper-grey">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-10 col-sm-offset-1">
        <h3>About this flat</h3>
        <p><%= flat.description %></p>
        <hr>
        <div class="row">
          <div class="flat-xtra-details">
            <div class="col-xs-12 col-sm-2">
              <p>The Space</p>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled space-first-infos">
                <li>Accommodates:<strong><%= flat.accomodates %></strong></li>
                <li>Bathrooms:<strong><%= flat.bathrooms %></strong></li>
                <li>Bed type:<strong><%= flat.bed_type %></strong></li>
                <li>Bedrooms:<strong><%= flat.bedrooms %></strong></li>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled space-second-infos">
                <li>Beds:<strong><%= flat.beds %></strong></li>
                <li>Property type:<strong><%= flat.property_type %></strong></li>
                <li>Room type:<strong><%= flat.room_type %></strong></li>
              </ul>
            </div>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="flat-xtra-details">
            <div class="col-xs-12 col-sm-2">
              <p>Amenities</p>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled amenities-first-infos">
                <% if flat.kitchen %>
                  <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
                <% end %>
                <% if flat.wifi %>
                  <li><i class="fa fa-wifi"></i><strong>Wifi</strong></li>
                <% end %>
              </ul>
            </div>
            <div class="col-xs-12 col-sm-4">
              <ul class="list-unstyled amenities-second-infos">
                <% if flat.tv %>
                  <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
                <% end %>
                <% if flat.welcome_drink %>
                  <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



